<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProceedPage"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">

        <LinearLayout
            android:id="@+id/container_topic_pay_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/side_menu_proceed"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:src="@drawable/side_menu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_body_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_topic_pay_proceed"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/proceed_cus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="@string/pay_cus_name"
                android:textColor="#000000"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/proceed_loc_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proceed_loca_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@drawable/location_pay" />

                <EditText
                    android:id="@+id/proceed_loc_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:autofillHints="Location"
                    android:background="@drawable/payment_input"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:text="@string/pay_cus_name"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/proceed_tel_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proceed_tel_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:adjustViewBounds="true"

                    android:src="@drawable/phone_pay" />

                <EditText
                    android:id="@+id/proceed_tel_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:autofillHints="Telephone"
                    android:background="@drawable/payment_input"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:text="@string/pay_cus_name"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/proceed_email_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proceed_email_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@drawable/email_pay" />

                <EditText
                    android:id="@+id/proceed_email_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:autofillHints="Email"
                    android:background="@drawable/payment_input"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:text="@string/pay_cus_name"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry,TextFields,TouchTargetSizeCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/deliverytxt_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="@string/pay_delivery"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/proceed_delivery_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:id="@+id/proceed_delivery_prc_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/shipping_chg_border"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/proceed_delivery_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pros_delivery_img"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/delivery_prc_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pros_del_chg"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/delivery_time_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pros_del_time"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/proceed_item_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/proceed_item_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/none"
                    android:src="@drawable/pros_item"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/delivery_item_name_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pros_item_name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/delivery_item_prc_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".80"
                            android:text="@string/pros_item_prc"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/delivery_item_qty_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".20"
                            android:text="@string/pros_item_qty"
                            android:textColor="#000000"
                            android:textDirection="rtl"
                            android:textSize="17sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pros_item_border"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/item_total_prc_txt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pros_item_cht_txt"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/delivery_item_totl_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pros_item_prc"
                    android:textColor="#FF1B0D"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/proceed_total_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"

                android:paddingBottom="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/item_subtotl_txt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="@string/pros_subtotal_txt"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_prc_txt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight=".30"
                    android:text="@string/pros_item_prc"
                    android:textColor="#000000"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/proceed_shipping_tot_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/item_shipping_txt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pros_shpping_txt"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_shipping_prc_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pros_del_chg"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/item_total_prc_ftxt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pros_final_prc_txt"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/item_total_prc_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:textColor="#FF1B0D"
                    android:textSize="20sp"
                    tools:text="@string/pros_item_prc" />

                <Button
                    android:id="@+id/proceed_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight=".30"
                    android:background="@drawable/custom_btn"
                    android:text="@string/proceed_to_pay_btn"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>
</ScrollView>